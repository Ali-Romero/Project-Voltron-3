.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  position relative
  z-index 1
  background-position: left
  +above($breakpoints.sm)
    background-position: center
    background-size: auto
  +above($breakpoints.lg)
    background-size: cover
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    z-index -1
    background-image: url('../images/main-photo.png'),
      url('../images/voltron-text.svg')
    background-repeat: no-repeat
    background-size: 284px auto, 124px auto;
    background-position: calc(50% - 20px), calc(50% - 86px);
    background-position-y: bottom;
    +above($breakpoints.sm)
      background-size: 332px auto, 152px auto;
      background-position: calc(50% - -242px), calc(50% - 462px);
      background-position-y: 70px, bottom
    +above($breakpoints.lg)
      background-size: 622px auto, 124px auto;
      background-position: calc(50% - -331px), calc(50% - 648px);
      background-position-y: bottom, 557px;
    +above($breakpoints.xxxl)
      background-size: 687px 787px, 298px 838px;
      background-position: calc(50% - -430px), calc(50% - 755px);
      background-position-y: bottom, 67px;
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        background-size: 401px auto, 143px auto;
        background-position: calc(50% - -283px), calc(50% - 447px);
        background-position-y: bottom, 137px;
      +above($breakpoints.lg)
        background-size: 480px auto, 239px auto;
        background-position: calc(50% - -295px), calc(50% - 713px);
        background-position-y: bottom, 78px;
      +above($breakpoints.xxxl)
        background-size: 480px auto, 239px auto;
        background-position: calc(50% - -295px), calc(50% - 713px);
        background-position-y: bottom, 78px;

  &__inner
    padding: 40px 0 344px 0
    +above($breakpoints.sm)
      padding: 60px 0 50px 0
    +above($breakpoints.lg)
      padding: 70px 0 66px 0
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        padding: 50px 0 66px 0
      +above($breakpoints.lg)
        padding: 50px 0 66px 0

  &__title
    max-width: 888px
    margin-bottom: 32px
    +above($breakpoints.lg)
      margin-bottom: 43px
    br
      display: block
    
    @media screen and (max-height: 800px)
      +above($breakpoints.lg)
        margin-bottom: 30px

  &__description
    font-size: 14px;
    line-height: 17px
    color: #FFFFFF;
    max-width: 537px
    margin: 0 auto 26px auto
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      margin: 0 0 26px 0
      font-size: 16px;
      line-height: 20px
      max-width: 416px
    +above($breakpoints.lg)
      max-width: 537px
      font-size: 21px;
      line-height: 32px
      margin: 0 0 39px 0
    br
      display: block
      +above($breakpoints.sm)
        display: none

  &__mobile-btn
    display: block
    max-width: 236px
    height: 48px
    margin: 0 auto
    +above($breakpoints.sm)
      display: none
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        display: block
        max-width: 230px
        height: 50px
        margin: 0 auto 0 0
      +above($breakpoints.lg)
        display: block
        max-width: 320px
        height: 60px

  &__info
    margin-bottom: 30px
    +above($breakpoints.sm)
      margin-bottom: 48px
    
  &__info-list
    display: flex
    max-width: 838px
    flex-direction: column
    +above($breakpoints.sm)
      flex-direction: row
    .slick-list
      max-width: 297px
      +above($breakpoints.sm)
        max-width: 734px
      +above($breakpoints.lg)
        max-width: 826px
    .slick-slide
      min-width: 297px
      +above($breakpoints.sm)
        min-width: 168px
      +above($breakpoints.lg)
        margin-right: 30px
        min-width: 193px
      &:last-child
        margin-right: 0
    .slick-dots
      display: flex
      justify-content: center
      li
        margin-right: 20px
        &:last-child
          margin-right: 0
      button
        font-size: 0
        border: none
        width: 10px
        height: 10px
        border-radius: 100%
        padding: 0
        margin: 0
        background-color: #e1e1e1
      .slick-active
        button
          background: linear-gradient(93.7deg, #EB526E 10.26%, #EB593F 97.33%)

  &__info-list-item
    display: flex !important
    align-items: center
    justify-content: center
    +above($breakpoints.sm)
      justify-content: flex-start
      margin-right: 20px
    +above($breakpoints.lg)
      margin-right: 30px
    &:last-child
      margin-right: 0
    &:nth-child(1)
      .main-section__info-list-item-text
        br
          &:nth-child(1)
            display: none
            +above($breakpoints.sm)
              display: block

  &__info-list-item-icon
    margin-right: 10px
    +above($breakpoints.sm)
      margin-right: 8px
    +above($breakpoints.lg)
      margin-right: 20px
    &.icon-circle
      width: 18px
      height: 18px
      +above($breakpoints.sm)
        width: 22px
        height: 22px
      +above($breakpoints.lg)
        width: 28px
        height: 28px

  &__info-list-item-text
    font-size: 13px;
    line-height: 17px
    color: #FFFFFF;
    max-width: 271px
    +above($breakpoints.sm)
      font-size: 13px;
      line-height: 18px
      max-width: 100%
    +above($breakpoints.lg)
      font-size: 16px;
      line-height: 24px
    span
      font-family: "Rubik-Medium"
    br
      display: block

  &__feedback
    display: none
    +above($breakpoints.sm)
      display: block
    @media screen and (max-height: 800px)
      display: none
