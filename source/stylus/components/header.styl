.header
  &__inner
    color: #051422;
    display: flex
    justify-content: space-between
    align-items: center
    padding: 10px 0
    +above($breakpoints.sm)
      padding: 16px 0
    +above($breakpoints.lg)
      padding: 20px 0
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        padding: 10px 0
      +above($breakpoints.lg)
        padding: 10px 0

  &__logo
    svg
      width: 106px;
      height: 38px;
      +above($breakpoints.sm)
        width: 150px
        height: 54px
      +above($breakpoints.lg)
        width: 195px
        height: 70px
      @media screen and (max-height: 800px)
        +above($breakpoints.sm)
          width: 106px;
          height: 38px;
        +above($breakpoints.lg)
          width: 150px
          height: 54px

  &__description
    display: none
    +above($breakpoints.sm)
      display: block
      max-width: 200px
      width 100%
      text-align: center
      font-size: 14px;
      line-height: 18px
    +above($breakpoints.lg)
      max-width: 364px
      font-size: 16px;
      line-height: 24px
      max-width: 214px
    span
      font-family: "Rubik-Bold"
