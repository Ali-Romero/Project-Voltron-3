.partner-section
  &__content
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      width: 100%
      height: 100%
      background-image: url('../images/partner-section-photo.jpg')
      background-repeat: no-repeat
      background-size: 1136px auto;
      background-position: calc(50% - 215px);
      background-position-y: 630px;
      +above($breakpoints.sm)
        background-size: 1053px auto;
        background-position: calc(50% - 409px);
        background-position-y: -30px;
      +above($breakpoints.lg)
        background-size: 1351px auto
        background-position: calc(50% - 578px)
        background-position-y: bottom
        z-index -1

  &__inner
    padding: 60px 0 500px 0
    position relative
    +above($breakpoints.sm)
      padding: 70px 0 80px 0
    +above($breakpoints.lg)
      padding: 98px 0 106px 0

  &__container
    max-width: 434px
    margin: 0 0 0 auto
    +above($breakpoints.lg)
      max-width: 645px

  &__title
    margin-bottom: 16px
    +above($breakpoints.lg)
      margin-bottom: 28px
    br
      display: block

  &__info-description
    margin-bottom: 30px
    font-size: 14px;
    line-height: 17px
    max-width: 407px;
    text-align: center
    +above($breakpoints.sm)
      text-align: left
    +above($breakpoints.lg)
      max-width: 617px
      margin-bottom: 45px
      font-size: 21px;
      line-height: 32px

  &__info-frame
    margin-bottom: 43px
    background: linear-gradient(93.7deg, #EB526E 10.26%, #EB593F 97.33%);
    border-radius: 10px;
    font-size: 14px
    line-height: 20px
    color: white
    padding: 10px 20px
    font-family: "Rubik-Bold"
    max-width: 373px
    text-align: center
    +above($breakpoints.sm)
      text-align: left
    +above($breakpoints.lg)
      max-width: 494px
      font-size: 18px
      line-height: 27px
      padding: 13px 30px 16px 30px

  &__info-list
    ul
      max-width: 606px
      li
        margin-bottom: 16px
        position relative
        padding-left: 16px
        font-size: 13px
        line-height: 20px
        +above($breakpoints.lg)
          padding-left: 27px
          font-size: 18px
          line-height: 27px
          margin-bottom: 20px
        &:last-child
          margin-bottom: 0
        &:before
          content: ""
          position: absolute
          left: 0
          top: 4px
          width: 9px
          height: 9px
          background: linear-gradient(93.7deg, #EB526E 10.26%, #EB593F 97.33%);
          border-radius: 100%
          +above($breakpoints.lg)
            width: 12px
            height: 12px
        span
          font-family: "Rubik-Bold"

  &__name
    position: absolute
    font-size: 14px
    line-height: 21px
    max-width: 307px
    width 100%
    top 1026px
    z-index 1
    max-height: 148px;
    height: 100%;
    background: rgba(255, 255, 255, 0.76);
    backdrop-filter: blur(30px);
    border-radius: 10px
    +above($breakpoints.sm)
      top 322px
    +above($breakpoints.lg)
      max-height: 185px;
      max-width: 340px
      font-size: 16px
      line-height: 24px
      top 448px
    &:before
      content: ""
      position: absolute
      right: 30px
      top: -13px
      width: 8px
      height: 8px
      border: 5px solid white
      border-radius: 100%
      z-index -1
      +above($breakpoints.sm)
        right: 30px
        top: -13px
        width: 10px
        height: 10px
        border: 7px solid white
    span
      font-family: "Rubik-Bold"

  &__name-top
    border-radius: 10px 10px 0 0
    background-color: white
    padding: 10px 12px
    width 100%
    +above($breakpoints.lg)
      padding: 15px 2px 15px 18px;
    span
      font-size: 16px
      line-height: 22px
      letter-spacing: 0.02em;
      +above($breakpoints.lg)
        font-size: 18px
        line-height: 27px
        letter-spacing: 0.03em;

  &__name-info
    padding: 10px 12px
    width 100%
    position: absolute
    border: 1px solid #FFFFFF;
    border-radius: 0 0 10px 10px
    +above($breakpoints.lg)
      padding: 15px 2px 15px 16px;
    ul
      li
        position relative
        padding-left: 12px
        +above($breakpoints.lg)
          padding-left: 18px
        &:before
          content: ""
          position absolute
          width: 6px
          height: 6px
          background-color: #242325;
          left: 0
          top: 8px
          border-radius: 100%
          +above($breakpoints.lg)
            top: 7px
            width: 8px
            height: 8px
        div
          display: inline
        br
          display: block
        &:first-child
          span
            display: block

  &__bottom-info
    background: linear-gradient(90deg, #1488CC 0%, #1974C6 16%, #1B6DC4 33.21%, #1E62C1 56.91%, #2B32B2 100%);
    position: relative
    z-index 1
    padding: 30px 0 26px 0
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    color: white
    +above($breakpoints.lg)
      padding: 50px 0 43px 0
    &:before
      content: ""
      position: absolute
      width: 100%
      height: 100%
      pointer-events: none
      z-index -1
      background-image: url('../images/partner-bottom-bg-1.svg'),
        url('../images/partner-bottom-bg-2.svg')
      background-repeat: no-repeat
      background-size: 339px auto
      background-position: calc(50% - 746px), calc(50% - -746px)
      background-position-y: bottom
      +above($breakpoints.lg)
        background-size: 339px auto
        background-position: calc(50% - 746px), calc(50% - -746px)
        background-position-y: bottom

  &__bottom-info-title
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-bottom: 12px
    overflow: hidden
    span
      width: 100%
      display: block
      height: 3px
      background: white
      +above($breakpoints.lg)
        height: 5px
      &:first-child
        transform: skew(12deg)
      &:last-child
        transform: skew(348deg)
    div
      padding: 0 10px
      img
        width: 116px
        height: auto
        +above($breakpoints.lg)
          width: 147px
          height: 26px

  &__bottom-info-text
    max-width: 300px
    text-align: center
    +above($breakpoints.sm)
      max-width: 826px
    +above($breakpoints.lg)
      max-width: 1049px
    div
      font-size: 14px
      line-height: 20px
      font-family: "Rubik-Bold"
      +above($breakpoints.sm)
        font-size: 16px
        line-height: 24px
      +above($breakpoints.lg)
        font-size: 21px
        line-height: 32px
    span
      font-size: 13px
      line-height: 19px
      display: block
      +above($breakpoints.sm)
        font-size: 14px
        line-height: 20px
      +above($breakpoints.lg)
        font-size: 18px
        line-height: 27px
