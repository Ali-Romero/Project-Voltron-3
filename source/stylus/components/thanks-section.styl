.thanks-section
  position relative
  z-index 1
  color: white
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    background-image: url('../images/thanks-photo.png')
    background-repeat: no-repeat
    background-size: 375px auto;
    background-position: calc(50% - -36px);
    background-position-y: calc(50% - -292px);
    +above($breakpoints.sm)
      background-size: 370px auto;
      background-position: calc(50% - -245px);
      background-position-y: calc(50% - -187px);
    +above($breakpoints.lg)
      background-size: 571px 674px
      background-position: calc(50% - -520px);
      background-position-y: calc(50% - -35px);

  &__inner
    padding: 37px 0 46px 0
    position relative

  &__title
    margin-bottom: 10px
    text-align: center
    +above($breakpoints.lg)
      text-align: left
    span
      font-size: 20px;
      line-height: 28px;
      display: block
      text-transform: initial
      +above($breakpoints.lg)
        font-size: 36px;
        line-height: 46px

  &__description
    font-size: 16px
    line-height: 20px
    margin-bottom: 25px
    text-align: center
    +above($breakpoints.lg)
      text-align: left
      font-size: 21px
      line-height: 32px

  &__time
    max-width: 528px
    background-color: white
    border-radius: 8px
    overflow: hidden
    font-size: 14px
    line-height: 16px
    margin: 0 auto 20px auto
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      font-size: 16px
      line-height: 20px
    +above($breakpoints.lg)
      font-size: 18px
      line-height: 27px
      margin: 0 auto 23px 0
      border-radius: 10px
      max-width: 619px

  &__time-top
    background: linear-gradient(93.7deg, #EB526E 10.26%, #EB593F 97.33%);
    padding: 14px 20px
    font-family: "Rubik-Bold"
    display: flex
    +above($breakpoints.lg)
      padding: 16px 30px
    div
      margin-right: 15px

  &__time-botom
    padding: 14px 20px
    color: #242325;
    text-align: center
    +above($breakpoints.lg)
      text-align: left
      padding: 16px 30px
    br
      display: block
      +above($breakpoints.sm)
        display: none

  &__helper-info
    font-size: 16px;
    line-height: 20px
    margin-bottom: 30px
    text-align: center
    +above($breakpoints.lg)
      text-align: left
      font-size: 18px;
      line-height: 27px
      margin-bottom: 37px
    br
      display: block

  &__container
    margin-bottom: 41px
    +above($breakpoints.sm)
      display: flex
      align-items: flex-end
      justify-content: flex-start
      margin-left: 100px
    +above($breakpoints.lg)
      margin-left: 0

  &__social-title
    font-size: 18px;
    line-height: 26px
    font-family: "Rubik-Medium"
    margin-right: 20px
    margin-bottom: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      margin-bottom: 0
    +above($breakpoints.lg)
      margin-right: 40px
      font-size: 21px;
      line-height: 32px
      margin-right: 62px

  &__social-description
    display: flex
    font-size: 16px
    line-height: 20px
    align-items: center
    justify-content: center
    +above($breakpoints.sm)
      justify-content: flex-start
    +above($breakpoints.lg)
      font-size: 18px
      line-height: 27px
    ul
      display: flex
      li
        margin-right: 20px
        &:last-child
          margin-right: 0
        svg
          width: 30px
          height: 30px
          +above($breakpoints.lg)
            width: 40px
            height: 40px

  &__slogan
    font-size: 20px;
    line-height: 30px
    margin-bottom: 432px
    text-transform: uppercase
    font-family: "Rubik-Bold"
    +above($breakpoints.sm)
      margin-left: 100px
      margin-bottom: 200px
    +above($breakpoints.lg)
      font-size: 26px;
      line-height: 35px
      margin-bottom: 30px
      margin-left: 0

  &__back-web
    font-size: 16px;
    line-height: 24px
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      margin-left: 100px
    +above($breakpoints.lg)
      font-size: 18px;
      line-height: 27px
      margin-left: 0
    a
      position: relative
      &:before
        content: ""
        position: absolute
        width: 100%
        height: 1px
        bottom: 2px
        background-color: white

  &__name-photo
    position: absolute
    right 80px
    bottom: 16px
    right: 63px;
    bottom: 105px;
    background: #FFFFFF;
    border-radius: 10px;
    font-size: 14px;
    line-height: 18px
    text-align: center;
    padding: 10px 16px
    +above($breakpoints.sm)
      right 80px
      bottom: 16px
    +above($breakpoints.lg)
      font-size: 16px;
      line-height: 24px
      bottom: 50px
      right -12px
      padding: 13px 23px 15px 20px
    div
      color: #242325;
    span
      color: #9AA2B1;
