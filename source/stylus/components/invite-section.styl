.invite-section
  overflow: hidden
  background-image: url('../images/invite-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  position relative
  z-index 1
  background-position: left
  +above($breakpoints.sm)
    background-position: center
  &:before
    content: ""
    position: absolute
    width: 100%
    height: 100%
    pointer-events: none
    z-index -1
    background-image: url('../images/invite-section-photo.png'),
      url('../images/voltron-text.svg')
    background-repeat: no-repeat
    background-size: 312px auto, 69px auto;
    background-position: calc(50% - 0px), calc(50% - -100px);
    background-position-y: 504px, 502px;
    +above($breakpoints.sm)
      background-size: 403px auto, 152px auto;
      background-position: calc(50% - -261px), calc(50% - 462px);
      background-position-y: 98px, bottom;
    +above($breakpoints.lg)
      background-size: 741px 836px, 298px 869px;
      background-position: calc(50% - -526px), calc(50% - 755px);
      background-position-y: bottom, 140px;
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        background-size: 440px auto, 152px auto;
        background-position: calc(50% - -253px), calc(50% - 462px);
        background-position-y: 134px, bottom;
      +above($breakpoints.lg)
        background-size: 553px auto, 298px auto;
        background-position: calc(50% - -347px), calc(50% - 755px);
        background-position-y: bottom, 140px;

  &__inner
    padding: 60px 0 40px 0
    +above($breakpoints.sm)
      padding: 80px 0 60px 0
    +above($breakpoints.lg)
      padding: 111px 0 78px 0
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        padding: 60px 0 50px 0
      +above($breakpoints.lg)
        padding: 80px 0 60px 0

  &__title
    margin-bottom: 23px
    .frame-title
      &:nth-child(1)
        +above($breakpoints.sm)
          margin-right: 0
          padding-right: 0
          border-start-end-radius: 0
          border-end-end-radius: 0
      &:nth-child(2)
        margin-right: 4px
        display: inline-block
        line-height: 22px
        margin-left: -1px
        +above($breakpoints.sm)
          display: inline
          line-height: unset
          padding-left: 0
          border-start-start-radius: 0
          border-end-start-radius: 0

  &__container
    margin-bottom: 48px
    +above($breakpoints.sm)
      display: flex
      align-items: flex-end

  &__info
    color: #FFFFFF;
    margin-bottom: 342px
    +above($breakpoints.sm)
      margin-bottom: 0
      margin-right: 80px
    ul
      li
        display: flex
        align-items: center
        font-size: 14px;
        line-height: 20px
        margin-bottom: 20px
        +above($breakpoints.lg)
          font-size: 16px;
          line-height: 24px
          margin-bottom: 22px
        @media screen and (max-height: 800px)
          +above($breakpoints.lg)
            margin-bottom: 14px
        &:last-child
          margin-bottom: 0
        div
          margin-right: 12px
          +above($breakpoints.lg)
            margin-right: 20px
        span
          max-width: 262px
          +above($breakpoints.sm)
            max-width: 317px
          +above($breakpoints.lg)
            max-width: 427px
        .icon-circle
          width: 24px
          height: 24px
          +above($breakpoints.lg)
            width: 28px
            height: 28px

  &__info-title
    font-size: 16px;
    line-height: 20px
    font-family: "Rubik-Medium"
    margin-bottom: 26px
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      font-size: 18px;
      line-height: 24px
    +above($breakpoints.lg)
      font-size: 21px;
      line-height: 32px

  &__photo-name
    background-color: white
    padding: 12px 16px
    border-radius: 8px; 
    -webkit-filter: drop-shadow(2px 0px 10px rgba(0,0,0,0.3));
    max-width: 294px;
    width: 100%;
    font-size: 14px;
    line-height: 19px;
    z-index 1
    position relative
    +above($breakpoints.lg)
      max-width: 399px
      font-size: 18px;
      line-height: 27px
      padding: 23px 30px 26px 30px
      border-radius: 10px;
    span
      display block
      position: absolute
      top: -20px
      left: 30px
      z-index -1
      +above($breakpoints.lg)
        left: auto
        right: 20px
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        bottom: -70px
      +above($breakpoints.lg)
        bottom: 0

  &__mobile-btn
    display: block
    max-width: 264px
    height: 48px
    margin: 0 auto
    +above($breakpoints.sm)
      display: none
    @media screen and (max-height: 800px)
      +above($breakpoints.sm)
        display: block
        max-width: 230px
        height: 50px
        margin: 0 auto 0 0
      +above($breakpoints.lg)
        display: block
        max-width: 348px;
        height: 67px;

  &__feedback
    display: none
    +above($breakpoints.sm)
      display: block
    .feedback__title
      margin-bottom: 6px
      +above($breakpoints.lg)
        margin-bottom: 11px
    
    @media screen and (max-height: 800px)
      display: none
