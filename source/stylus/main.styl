@import 'common/variables'
@import 'common/*'
@import 'components/*'

.page
  display: flex
  flex-direction: column
  min-height: 100%
  &--thanks
    .connection__description-link
      br
        display: block
  &__content
    flex: 1
    &--layout
      display: flex
      justify-content: center
      flex-direction: column
      background: linear-gradient(90deg, #1488CC 0%, #1974C6 16%, #1B6DC4 33.21%, #1E62C1 56.91%, #2B32B2 100%);
      position relative
      &:before
        content: ""
        position: absolute
        width: 100%
        height: 100%
        background-image: url('../images/light.png'), url('../images/bg-logo.svg')
        background-repeat: no-repeat
        background-size: 1001px auto, 404px auto
        background-position: left, calc(50% - 822px)
        background-position-y: top, calc(50% - -192px)
      &:after
        content: ""
        position: absolute
        width: 100%
        height: 100%
        background-image: url('../images/light.png')
        background-repeat: no-repeat
        background-size: 862px auto
        transform: matrix(-1, 0, 0, 1, 0, 0);
        top: 0
